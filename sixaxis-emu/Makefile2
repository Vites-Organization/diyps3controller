CC=gcc
CFLAGS=-Wall -g
#CFLAGS+=-DJOYSTICK

.PHONY: all
all: emu emuclient

.PHONY: clean
clean:
	rm -f emu emuclient emucurses *~ *.o

emu: emu.o sixaxis.o dump.o l2cap_con.o bt_utils.o
	$(CC) $(CFLAGS) -lbluetooth -o $@ $^

emuclient: emuclient.o sixaxis.o dump.o macros.o config.o
	$(CC) $(CFLAGS) -lSDL -lxml2 -o $@ $^

%.o: %.c
	$(CC) -o $@ -c $< $(CFLAGS) -I/usr/include/libxml2
	
